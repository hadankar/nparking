<div class="starter-template">
<h2>Registrácia</h2>
<p class="lead">Zaregistrujte, aby ste mohli zdielať parkovacie miesto.</p>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-inline">
    <%= f.label :email, class: "sr-only" %><br />
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "email" %>
  </div>

  <div class="form-inline">
    <br />
    <%= f.label :password, class: "sr-only" %>
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "heslo" %><br />
    <% if @minimum_password_length %>
    <em>(minimálny počet znakov: <%= @minimum_password_length %>)</em>
    <% end %>
  </div>

  <div class="form-inline">
    <%= f.label :password_confirmation, class: "sr-only" %>
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "zopakovať heslo" %>
  </div>

  <div class="actions">
    <br />
    <%= f.submit "Registrácia", class: "btn btn-primary" %>
  </div>
<% end %>
<br />
<%= render "devise/shared/links" %>
</div>
